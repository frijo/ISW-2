<script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
<!-- This is a very simple parallax effect achieved by simple CSS 3 multiple backgrounds, made by http://twitter.com/msurguy -->
<script type="text/javascript">
    $(document).ready(function () {
        $(document).mousemove(function (e) {
            TweenLite.to($('body'),
               .5,
               {
                   css:
                     {
                         'background-position': parseInt(event.pageX / 3) + "px " + parseInt(event.pageY / 45) + "px, " + parseInt(event.pageX / 3) + "px " + parseInt(event.pageY / 45) + "px, " + parseInt(event.pageX / 3) + "px " + parseInt(event.pageY / 45) + "px"
                     }
               });
        });
    });
</script>

<div class="container">

    <section id="loginForm">


        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="row vertical-offset-100">
                <div class="col-md-4 col-md-offset-4">
                    <div class="panel-body">

                        <form accept-charset="UTF-8" role="form">
                            <div class="panel panel-primary text-center" >
                        <div class="panel-heading">
                            <h3 class="panel-title">Iniciar Sesión</h3>
                        </div>
                        <fieldset>

                            <legend></legend>
                            <div class="form-group">                                
                                <input data-val="true" data-val-required="*El campo Nombre de usuario es obligatorio*." type="text" name="UserName" id="UserName" class="form-control input-lg" placeholder="Nombre de Usuario">
                                @Html.ValidationMessageFor(m => m.UserName)
                            </div>
                            <div class="form-group">                                                            
                                <input data-val="true" data-val-required="*El campo Contraseña de usuario es obligatorio*." data-val-length-max="100" data-val-length-min="6" class="form-control input-lg" placeholder="Contraseña" name="password" type="password" value="">
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>


                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Entrar" />

                        </fieldset>
                                </div>
                              </form>
                    </div>                  
                </div>
            </div>
        }
    </section>

